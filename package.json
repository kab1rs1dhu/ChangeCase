{
  "name": "changecase",
  "displayName": "ChangeCase",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "text-case-converter.toUpper",
        "title": "Convert to UPPERCASE"
      },
      {
        "command": "text-case-converter.toLower",
        "title": "Convert to lowercase"
      },
      {
        "command": "text-case-converter.toTitle",
        "title": "Convert to Title Case"
      },
      {
        "command": "text-case-converter.toCamel",
        "title": "Convert to camelCase"
      },
      {
        "command": "text-case-converter.toSnake",
        "title": "Convert to snake_case"
      },
      {
        "command": "text-case-converter.toConstant",
        "title": "Convert to CONSTANT_CASE"
      }
    ],
    "keybindings": [
      {
        "command": "text-case-converter.toUpper",
        "key": "ctrl+shift+u",
        "mac": "cmd+shift+u",
        "when": "editorTextFocus"
      },
      {
        "command": "text-case-converter.toLower",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      },
      {
        "command": "text-case-converter.toTitle",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "text-case-converter.toCamel",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      },
      {
        "command": "text-case-converter.toSnake",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus"
      },
      {
        "command" : "text-case-converter.toConstant",
        "key": "ctrl+shift+k",
        "mac": "cmd+shift+k",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.36.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
